{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "es6",
		"module": "es2015",
		"declaration": true,
		"noImplicitAny": false,
		"rootDir": "src",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
